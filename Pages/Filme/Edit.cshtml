@page
@model Proiect_final.Pages.Filme.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Film</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Film.ID" />
            <div class="form-group">
                <label asp-for="Film.Titlu" class="control-label"></label>
                <input asp-for="Film.Titlu" class="form-control" />
                <span asp-validation-for="Film.Titlu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.Regizor" class="control-label"></label>
                <input asp-for="Film.Regizor" class="form-control" />
                <span asp-validation-for="Film.Regizor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.Pret" class="control-label"></label>
                <input asp-for="Film.Pret" class="form-control" />
                <span asp-validation-for="Film.Pret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.ReleaseDate" class="control-label"></label>
                <input asp-for="Film.ReleaseDate" class="form-control" />
                <span asp-validation-for="Film.ReleaseDate" class="textdanger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.DistribuitorID" class="control-label">Nume Distribuitor</label>
                <select asp-for="Film.DistribuitorID" class="form-control" asp-items="ViewBag.DistribuitorID">
                </select>
                <span asp-validation-for="Film.DistribuitorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
